---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Web & Integration Developer' } = Astro.props;
---

<!doctype html>
<html lang="es">

<head>
	<meta charset="UTF-8" />
	<meta name="description" content={description} />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/logo.svg" />
	<title>{title}</title>
</head>

<body>
	<!-- Navigation -->
	<nav class="sticky top-0 z-50 bg-bg/80 backdrop-blur-md border-b-2 border-border">
		<div class="max-w-7xl mx-auto px-6 py-4 lg:py-6">
			<div class="flex justify-between items-center">
				<!-- Logo -->
				<a href="/" class="flex items-center gap-2">
					<img src="/logo.svg" alt="Diego Alejandro" class="w-10 h-10 lg:w-11 lg:h-11" />
					<span class="font-pixel text-lg text-primary">Ale Portfolio</span>
				</a>
				<!-- Desktop Navigation -->
				<ul class="hidden md:flex gap-8">
					<li>
                        <a href="#about" class="text-text hover:text-primary transition-colors font-medium">
                            About me
                        </a>
                    </li>
					<li>
                        <a href="#skills" class="text-text hover:text-primary transition-colors font-medium">
                            Skills
                        </a>
                    </li>
					<li>
                        <a href="#projects" class="text-text hover:text-primary transition-colors font-medium">
                            Projects
                        </a>
                    </li>
					<!-- <li>
                        <a href="#blog" class="text-text hover:text-primary transition-colors font-medium">
                            Blog
                        </a>
                    </li> -->
					<li>
                        <a href="#contact" class="text-text hover:text-primary transition-colors font-medium">
                            Contact
                        </a>
                    </li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Main content -->
	<main>
		<slot />
	</main>

	<!-- Footer -->
	<footer class="border-t-2 border-border bg-bg-secondary">
		<div class="max-w-7xl mx-auto px-6 py-12 text-center">
			<p class="text-text-muted text-sm">
				&copy; {new Date().getFullYear()} Diego Alejandro Correa. ;).
			</p>
		</div>
	</footer>
    <style>
        /* Underline effect in nav links */
        nav a {
            position: relative;
        }
        nav a::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background: #2563eb;
            transition: width 0.3s ease;
        }
        nav a:hover::after {
            width: 100%;
        }
    </style>
</body>
</html>
