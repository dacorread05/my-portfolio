---
interface Props {
  name?: string;
  title?: string;
  description?: string;
}

const {
  name = "Diego Alejandro",
  title = "Integration & Web Developer",
  description = "Computer and Systems Engineer with 4+ years of experience building integration and front-end solutions. Skilled in Boomi, NetSuite, and Salesforce, with a strong focus on clean code and scalable systems. Master's in Software Engineering graduate specializing in scalable architectures and modern web development."
} = Astro.props;
---

<section class="relative min-h-[85vh] flex items-center justify-center px-6 lg:px-8 py-12 overflow-hidden">
  <!-- Pixel grid background -->
    <div class="absolute inset-0 pixel-grid"></div>

    <!-- Decoraciones pixeladas mejoradas -->
    <div class="absolute top-[10%] right-[10%] w-3 h-3 bg-primary opacity-20">
        <div class="absolute top-0 left-3 w-3 h-3 bg-primary"></div>
        <div class="absolute top-0 left-6 w-3 h-3 bg-primary"></div>
        <div class="absolute top-3 left-0 w-3 h-3 bg-primary"></div>
        <div class="absolute top-3 left-6 w-3 h-3 bg-primary"></div>
        <div class="absolute top-6 left-3 w-3 h-3 bg-primary"></div>
    </div>

    <div class="absolute bottom-[15%] left-[8%] w-3 h-3 bg-accent opacity-20">
        <div class="absolute top-0 left-3 w-3 h-3 bg-accent"></div>
        <div class="absolute top-3 left-0 w-3 h-3 bg-accent"></div>
        <div class="absolute top-3 left-3 w-3 h-3 bg-accent"></div>
    </div>

    <!-- Decoración superior izquierda -->
    <div class="absolute top-[20%] left-[5%] w-3 h-3 bg-primary opacity-15">
        <div class="absolute top-0 left-3 w-3 h-3 bg-primary"></div>
        <div class="absolute top-3 left-0 w-3 h-3 bg-primary"></div>
    </div>

    <!-- Hero content -->
    <div class="relative z-10 max-w-3xl">
        <div class="inline-block font-pixel text-xs uppercase tracking-wider text-primary bg-bg-secondary px-4 py-2 mb-6 border-2 border-primary">
            {title}
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            Hi, I'm <span class="font-pixel text-primary text-[0.95em]">{name}</span>
        </h1>

        <p class="text-lg md:text-xl text-text-muted mb-10 max-w-2xl leading-relaxed">
            {description}
        </p>

        <div class="flex flex-wrap gap-4">
        <a href="#contact" class="btn-primary">
            Let's work together
            <span>→</span>
        </a>
        <a href="#projects" class="btn-secondary">
            View projects
        </a>
        </div>
    </div>
    </section>

<style>
    /* Animación de entrada suave */
    section > div:last-child {
        animation: fadeInUp 0.8s ease-out;
    }

    @keyframes fadeInUp {
        from {
        opacity: 0;
        transform: translateY(30px);
        }
        to {
        opacity: 1;
        transform: translateY(0);
        }
    }
</style>