---
import SkillIcon from './SkillIcon.astro';

const skills = [
  // Programming Languages
    { name: 'JavaScript', icon: 'javascript', category: 'language' },
    { name: 'TypeScript', icon: 'typescript', category: 'language' },
    { name: 'Apex', icon: 'apex', category: 'language' },
    { name: 'SuiteScript', icon: 'suitescript', category: 'language' },

    // Frameworks & Tools
    { name: 'React', icon: 'react', category: 'framework' },
    { name: 'Angular', icon: 'angular', category: 'framework' },
    { name: 'Node.js', icon: 'nodejs', category: 'framework' },

    // Platforms
    { name: 'Boomi', icon: 'boomi', category: 'platform' },
    { name: 'NetSuite', icon: 'netsuite', category: 'platform' },
    { name: 'Salesforce', icon: 'salesforce', category: 'platform' },

    // Databases
    { name: 'MySQL', icon: 'mysql', category: 'database' },
    { name: 'MongoDB', icon: 'mongodb', category: 'database' },
    { name: 'PostgreSQL', icon: 'postgresql', category: 'database' },

    // Tools
    { name: 'Git', icon: 'git', category: 'tool' },
    { name: 'Postman', icon: 'postman', category: 'tool' },
];
---

<section id="skills" class="max-w-7xl mx-auto px-6 lg:px-8 py-20">
    <div class="mb-12">
        <h2 class="section-title mb-2">Skills</h2>
        <p class="text-text-muted">Technologies and tools I work with</p>
    </div>

    <div class="bg-bg-secondary p-8 lg:p-12 border-2 border-border">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 lg:gap-6">
        {skills.map((skill) => (
            <div class="card p-6 text-center group">
                <SkillIcon icon={skill.icon} name={skill.name} />
                <div class="text-sm font-semibold text-text">
                {skill.name}
                </div>
            </div>
        ))}
        </div>
    </div>
</section>